@model IEnumerable<DataAccessLayer.Model.Category>

@{
    ViewData["Title"] = "Index";
}

<h2>Categories</h2>

<p>
    <a href="@Url.Action("Create")">Create New</a>
</p>

<div style="overflow:auto">
    @foreach (var item in Model) {
        <div class="col-md-2">
            @item.CategoryName (books: @(item.BookCategories == null ? "(not loaded)" : item.BookCategories.Count.ToString()))
        </div>
    }
</div>
